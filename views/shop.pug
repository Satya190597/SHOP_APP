extends layouts/main-layouts.pug

block content
    main
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg", alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book.
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 Products Not Found