<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(editMode) { %>
        <form class="product-form" action="/admin/edit-product" method="POST">
        <% } else { %>
        <form class="product-form" action="/admin/add-product" method="POST">
        <% } %>    
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title"
                 value="<% if(editMode) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Title</label>
                <input type="text" name="imageUrl" id="imageUrl"
                value="<% if(editMode) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Title</label>
                <input type="number" name="price" id="price"
                value="<% if(editMode) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Title</label>
                <textarea name="description" id="description" cols="30" rows="10">
                    <% if(editMode) { %><%= product.descriptions %><% } %>
                </textarea>
            </div>
            <% if(editMode) { %>
                <input type="hidden" value="<%= product.id %>" name="id" />
            <% } %>
            <button class="btn" type="submit">
                <% if(editMode) { %>
                    Edit Product
                <% } else { %>
                    Add Product
                <% } %>
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>